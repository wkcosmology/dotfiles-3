{
  "diagnostic.warningSign": "üî•",
  "diagnostic.errorSign": "‚ùå",
  "diagnostic.infoSign": "üî∑",
  "diagnostic.hintSign": "üí°",
  "diagnostic.enableHighlightLineNumber": false,

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash", "zsh"]
    },
    "python": {
      "command": "pyls",
      "filetypes": ["python"],
      "settings": {
        "pyls": {
          "enable": true,
          "trace": {
            "server": "verbose"
          },
          "commandPath": "",
          "configurationSources": [
            "pycodestyle"
          ],
          "plugins": {
            "jedi_completion": { "enabled": true },
            "jedi_hover": { "enabled": true },
            "jedi_references": { "enabled": true },
            "jedi_signature_help": { "enabled": true },
            "jedi_symbols": { "enabled": true, "all_scopes": true },
            "mccabe": { "enabled": true, "threshold": 15 },
            "preload": { "enabled": true },
            "pycodestyle": { "enabled": true },
            "pydocstyle": {
              "enabled": false,
              "match": "(?!test_).*\\.py",
              "matchDir": "[^\\.].*"
            },
            "rope_completion": { "enabled": true }
          }
        }
      }
    },
    "clangd": {
      "command": "clangd",
      "args": ["--fallback-style", "Chromium"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "c++",
        "objc",
        "objcpp"
      ]
    },
    "js/ts": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
      ]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell", "hs", "lhs"]
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    }
    // "lua": {
    //   "command": "lua-language-server",
    //   "filetypes": ["lua"],
    //   "rootPatterns": [".git/"],
    //   // "cwd": "full path of lua-language-server directory", (not sure this one is really necessary)
    //   "args": [
    //     "-E",
    //     "-e",
    //     "LANG=en",
    //     "/usr/share/lua-languageserver/main.lua"
    //   ]
    // }
  },
  "rust-analyzer.serverPath": "/usr/bin/rust-analyzer",
  "rust-analyzer.inlayHints.chainingHints": false,
  "coc.preferences.colorSupport": true
}
